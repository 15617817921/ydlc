<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/my_bule"
        >
        <ImageView
            android:id="@+id/iv_hdjl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="核对记录"
            android:textColor="#fff"
            android:textSize="@dimen/text_1" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间："
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_hdjl_kssj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="2017/7/19"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间："
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_hdjl_jssj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/7/19"
                android:layout_marginLeft="12dp"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_hdjl"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />
    <LinearLayout
        android:id="@+id/ll_hdjl_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="查询不到任何核对信息"
            android:textSize="12sp"
            android:textColor="#a3a3a3"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_heduijl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/bai">
    </ListView>
</LinearLayout>
