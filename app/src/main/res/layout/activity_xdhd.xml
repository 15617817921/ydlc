<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hedui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.HeDuiActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/my_bule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="血袋核对"
            android:textColor="#fff"
            android:textSize="@dimen/text_1" />
        <TextView
            android:id="@+id/bq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="12dp"
            android:text="核对记录"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone"/>
    </FrameLayout>
    <!--病人信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142.5dp"
        android:layout_below="@+id/no2"
        android:animateLayoutChanges="true"
        android:background="@drawable/yizhu_img15x"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tx"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/icon_men" />

            <TextView
                android:id="@+id/mz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="#00ffffff"
                android:text="于小斐"
                android:textColor="#333333"
                android:textSize="@dimen/text_1" />

            <TextView
                android:id="@+id/ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@color/my_bule"
                android:text="1-101床"
                android:textColor="#fff"
                android:textSize="@dimen/text_4" />


        </LinearLayout>


        <!--<LinearLayout
            android:id="@+id/sjxz"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="18dp"
            android:background="#98403e3e"
            android:gravity="right">
            <TextView
                android:id="@+id/sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="14dp"
                android:text="2017/6/30"
                android:textSize="13sp"
                android:textColor="#ffffff"/>

        </LinearLayout>-->
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hedui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3f90eb"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        android:text="核对"/>
    <LinearLayout
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="查询不到任何需要核对项"
            android:textSize="12sp"
            android:textColor="#a3a3a3"/>
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bai"
        android:id="@+id/bgd">
    </ListView>



</LinearLayout>
