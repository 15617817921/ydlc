<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sj"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_temper_detail_rq"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tool:text="2017/01/01" />

                <TextView
                    android:id="@+id/tv_temper_detail_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tool:text="00:00" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_temper_detail_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_temper_detail_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_temper_detail_danwei"
                tool:text="36.5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_temper_detail_lx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/sj"
                tool:text="7777777777777"
                android:textSize="18sp" />
            <!--<ImageView-->
            <!--android:id="@+id/iv_temper_detail_show"-->
            <!--android:layout_width="130dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:layout_toLeftOf="@id/tv_temper_detail_value"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@drawable/temperature_nomal" />-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/vertical_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#D9D9D9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>