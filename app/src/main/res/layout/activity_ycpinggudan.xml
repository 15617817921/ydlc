<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/my_bule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="压疮评估单"
            android:textColor="#fff"
            android:textSize="@dimen/text_1" />
        <ImageView
            android:id="@+id/iv_ycpinggudan_detail"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="50dp"
            android:src="@drawable/icon_title_huli" />
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_title_add" />
    </FrameLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--病人信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142.5dp"
                android:layout_below="@+id/no2"
                android:animateLayoutChanges="true"
                android:background="@drawable/yizhu_img15x"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tx"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/icon_men" />

                    <TextView
                        android:id="@+id/mz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp"
                        android:background="#00ffffff"
                        android:text="于小斐"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_1" />

                    <TextView
                        android:id="@+id/ch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp"
                        android:background="@color/my_bule"
                        android:text="1-101床"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_4" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sjxz"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:background="#98403e3e"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:text="评估时间："
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/sj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f9f9f9" />

            <LinearLayout
                android:id="@+id/sv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/yczg_select"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:text="压疮转归"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/yczg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:text="请选择"
                            android:textColor="#3f90eb"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/ic_choose" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f9f9f9" />

                <FrameLayout
                    android:id="@+id/cmsz_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="创面色泽"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cmsz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/liang_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="分泌物量"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/liang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/yanse_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="分泌物颜色"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/yanse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/qscl_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="全身处理"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/qscl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/jbcl_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="局部处理"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/jbcl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fq_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="10dp"
                        android:text="分期"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="36dp"
                        android:layout_marginLeft="90dp"
                        android:text="请选择"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_choose" />

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="部位" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/buwei"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:gravity="center"

                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="面积" />
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mianji"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:digits="0123456789*."
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="12sp"
                    android:text="（注：输入长宽高，以*号隔开，如：10*10*10）" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    android:gravity="right|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="签名:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="dada"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/my_bule"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="17sp" />


</LinearLayout>
