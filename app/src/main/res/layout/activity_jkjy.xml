<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"
            android:background="@color/my_bule">

            <ImageView
                android:id="@+id/back"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_jkjy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="健康教育-"
                android:textColor="#fff"
                android:textSize="@dimen/text_18" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_jkjy_title"
                android:dropDownVerticalOffset="@dimen/y30"
                android:dropDownWidth="wrap_content"
                android:background="@android:color/transparent"
                android:entries="@array/healthedu"
                android:requiresFadingEdge="none"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/bt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="12dp"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--病人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142.5dp"
            android:layout_below="@+id/no2"
            android:animateLayoutChanges="true"
            android:background="@drawable/yizhu_img15x"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tx"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:src="@drawable/icon_men" />

                <TextView
                    android:id="@+id/mz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:background="#00ffffff"
                    android:text="于小斐"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_1" />

                <TextView
                    android:id="@+id/ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:background="@color/my_bule"
                    android:text="1-101床"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_4" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/sjxz"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="18dp"
                android:background="#98403e3e"
                android:gravity="right">

                <TextView
                    android:id="@+id/sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="14dp"
                    android:text="2017/6/30"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>


        <ListView
            android:id="@+id/jyxm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/bai"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#f9f9f9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/icon_duixiang2x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/br_select"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:checked="true"
                        android:text="This checkbox is: unchecked" />

                    <TextView
                        android:id="@+id/br_select1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病人" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/js_select"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/js_select1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家属" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/icon_jineng2x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/jineng1"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/jn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能复述" />

                    <CheckBox
                        android:id="@+id/jineng2"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"

                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/jn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能模仿" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/jineng3"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/jn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能操作" />

                    <CheckBox
                        android:id="@+id/jineng4"
                        style="@style/EduCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/jn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="能解释" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
