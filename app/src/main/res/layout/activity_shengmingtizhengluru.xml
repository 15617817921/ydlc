    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_smtz_root_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_changluxiang_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/my_bule"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="生命体征录入"
                android:textColor="#EEF4FD"
                android:textSize="@dimen/text_1" />
            <TextView
                android:id="@+id/tv_smtzlr_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="录入查看"
                android:layout_centerVertical="true"
                android:padding="@dimen/x10"
                android:textColor="#EEF4FD"
                android:textSize="@dimen/text_16" />

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_marginRight="6dp"-->
                <!--android:scaleType="centerInside"-->
                <!--android:src="@drawable/icon_refresh" />-->
        </RelativeLayout>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/my_bule"
            android:gravity="center"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <ListView
            android:id="@+id/lv_smtz_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_save"
            android:layout_below="@id/ll_changluxiang_bar"
            android:paddingTop="1dp">

        </ListView>
    </RelativeLayout>
